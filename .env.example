# Cloudflare Environment Variables
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Resend API Key for OTP emails
RESEND_API_KEY=re_your_resend_api_key

# JWT Secret for session tokens (generate a secure random string)
JWT_SECRET=your-secret-key-here

# Hyperdrive Local Connection String (for local development)
# This should point to your local PostgreSQL instance
WRANGLER_HYPERDRIVE_LOCAL_CONNECTION_STRING_HYPERDRIVE=postgresql://user:password@localhost:5432/database